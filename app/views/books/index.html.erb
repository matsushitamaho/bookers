<h1>Books</h1>

<% @books.each do |book| %>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <tr>
      <td><%=book.title %></td>
      <td><%=book.description %></td>
      <td><%=link_to 'show','/books/show'%></td>
      <td><%=link_to 'edit','books/edit'%></td>
      <td><%=link_to 'destroy',destroy_books_path(@book.id),method:delete,=>"本当に削除しますか？"%></td>
    </tr>
  </tbody>
</table>

<h2>New book</h2>